{% extends 'base.html.twig' %}

{% block title %} Login {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/login.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    {% if error %}
        <div> error = {{ error.messageKey|trans(error.messageData, 'security') }} </div>
    {% endif %}

    <form class="login card" action="{{ path('login') }}" method="POST">
        <header class="card-header">
            Login
        </header>
        <div class="card-body">
            <div class="form-group form-row">
                <label class="col-form-label col-4"> Username </label>
                <input type="text" class="form-control col-6" name="_username" placeholder="Username" required />
            </div>
            <div class="form-group form-row">
                <label class="col-form-label col-4"> Password </label>
                <input type="password" class="form-control col-6" name="_password" placeholder="Password" required />
            </div>
            <div class="form-row">
                <div class="col-4">
                    <button type="submit" class="px-4 mx-4 btn btn-danger"> Login </button>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="checkbox" name="_remember_me" checked />
                    <label class="form-check-label"> Stay logged in for one week </label>
                </div>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
          value="{{ csrf_token('authenticate') }}"
        >
    </form>
{% endblock %}
