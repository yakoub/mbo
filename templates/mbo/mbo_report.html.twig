{% extends 'base.html.twig' %}

{% block title %} {{ employee.name }}, {{ year }} {% endblock %}

{% block body %}
    <table class="table"><tbody>
    <tr> 
        <th> Employee </th> <td> {{ employee.name }}, {{ year }} </td>
    </tr>
    <tr>
        <th> Manager </th> <td> {{ employee.getManager().name }} </td>
    </tr>
    </tbody></table>
    {{ form_start(form) }}
        <table class="table table-bordered">
        <thead>
            <th> Subject </th>
            <th> Weight </th>
            <th> Achieve </th>
        </thead>
        <tbody>
        <tr><td colspan="3"> Direct </td></tr>
        {% for objective_form in form.objectivesDirect %}
            {% set objective = objective_form.vars.value %}
            {{ include('mbo/mbo_tr.html.twig') }}
        {% endfor %}
        <tr><td colspan="3"> Indirect </td></tr>
        {% for objective_form in form.objectivesIndirect %}
            {% set objective = objective_form.vars.value %}
            {{ include('mbo/mbo_tr.html.twig') }}
        {% endfor %}
        <tr><td colspan="3"> Infrastructure </td></tr>
        {% for objective_form in form.objectivesInfrastructure %}
            {% set objective = objective_form.vars.value %}
            {{ include('mbo/mbo_tr.html.twig') }}
        {% endfor %}
        </tbody></table>
        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
{% endblock %}
