<table class="table table-striped children-for-{{ parent.id }}"><tbody>
{% for person in people %}
    <tr>
        <td> 
            <a href="{{ path('person_admin', {'id': person.id}) }}">
                {{ person.FullName }} 
            </a>
        </td>
        <td class="status"> 
            {% if person.active %}
                <span class="badge badge-success"> 
                    Active
                </span>
            {% else %}
                <span class="badge badge-secondary"> 
                    Inactive
                </span>
            {% endif %}
        </td>
        <td>
            <a href="{{ path('person_edit', {'id': person.id}) }}">
                Edit
            </a>
        </td>
    </tr>
{% endfor %}
</tbody></table>
